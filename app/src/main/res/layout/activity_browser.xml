<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cafetime.cafetime.Browser">

    <WebView
		android:id="@+id/webView1"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true"
		android:layout_alignParentRight="true"
		android:layout_alignParentEnd="true"
		android:layout_above="@+id/textUsage">

	</WebView>

    <TextView
		android:id="@+id/textUsage"
		android:layout_height="wrap_content"
		android:text="使用時間："
		android:gravity="right"
		android:background="#00ffbb"
		android:layout_gravity="bottom"
		android:layout_alignParentBottom="true"
		android:layout_alignLeft="@+id/webView1"
		android:layout_alignStart="@+id/webView1"
		android:layout_width="80dip"/>

	<TextView
		android:id="@+id/useHour"
		android:layout_height="wrap_content"
		android:gravity="bottom|right"
		android:background="#00ffbb"
		android:layout_gravity="bottom"
		android:layout_x="72dp"
		android:layout_y="478dp"
		android:layout_alignParentBottom="true"
		android:layout_toEndOf="@+id/textUsage"
		android:layout_width="22dip"/>

	<TextView
		android:id="@+id/textHour"
		android:layout_height="wrap_content"
		android:text="時間"
		android:gravity="left"
		android:background="#00ffbb"
		android:layout_gravity="bottom"
		android:layout_x="72dp"
		android:layout_y="478dp"
		android:layout_alignParentBottom="true"
		android:layout_toEndOf="@+id/useHour"
		android:layout_width="32dip"/>

	<TextView
		android:id="@+id/useMinute"
		android:layout_height="wrap_content"
		android:gravity="right"
		android:background="#00ffbb"
		android:layout_gravity="bottom"
		android:layout_x="72dp"
		android:layout_y="478dp"
		android:layout_alignParentBottom="true"
		android:layout_toEndOf="@+id/textHour"
		android:layout_width="22dip"/>

	<TextView
		android:id="@+id/textMinute"
		android:layout_height="wrap_content"
		android:text="分"
		android:gravity="left"
		android:background="#00ffbb"
		android:layout_gravity="bottom"
		android:layout_x="72dp"
		android:layout_y="478dp"
		android:layout_alignParentBottom="true"
		android:layout_toEndOf="@+id/useMinute"
		android:layout_width="22dip"/>

</RelativeLayout>
